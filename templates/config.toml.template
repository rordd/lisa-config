default_provider = "gemini"
default_model = "gemini-2.5-flash"
default_temperature = 0.7

[model_providers.gemini]
name = "gemini"

[autonomy]
level = "supervised"
workspace_only = false
allowed_commands = [
    "git", "npm", "cargo", "ls", "cat", "grep", "find", "echo",
    "pwd", "wc", "head", "tail", "date", "gog", "curl", "jq",
    "python3", "bash",
]
auto_approve = [
    "file_read", "memory_recall", "web_fetch", "web_search",
    "web_search_tool", "skills", "shell",
]

[security.sandbox]
backend = "auto"

[security.audit]
enabled = true
log_path = "audit.log"

[runtime]
kind = "native"

[reliability]
provider_retries = 2
provider_backoff_ms = 500

[scheduler]
enabled = true

[agent]
max_tool_iterations = 10
max_history_messages = 50

[skills]
open_skills_enabled = false
prompt_injection_mode = "compact"

[channels_config]
cli = true

[channels_config.telegram]
bot_token = "{{TELEGRAM_BOT_TOKEN}}"
allowed_users = ["{{TELEGRAM_USER_ID}}"]
mention_only = true

[memory]
backend = "sqlite"
auto_save = true
hygiene_enabled = true

[gateway]
port = 42617
host = "127.0.0.1"
require_pairing = false

[web_fetch]
enabled = true
provider = "nanohtml2text"
allowed_domains = ["*"]

[web_search]
enabled = true
provider = "duckduckgo"

[identity]
format = "openclaw"

[a2ui]
enabled = true

[hooks]
enabled = true
